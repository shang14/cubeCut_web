---
import Layout from '../layouts/Layout.astro';
import ThreeCube from '../components/ThreeCube.vue';
---

<Layout title="CubeCut - 自由切割练习场">
	<main class="container mx-auto px-4 py-8 flex flex-col items-center">
		<h1 class="text-4xl font-bold mb-4">自由切割练习场</h1>
		<div class="w-full h-96 border-4 border-dashed border-gray-400 rounded-lg">
			<ThreeCube client:only="vue" />
		</div>
		<p class="mt-4">使用鼠标拖动以旋转立方体。</p>
	</main>
</Layout>